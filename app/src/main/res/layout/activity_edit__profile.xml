<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".Edit_Profile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/edit_profile_photo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/d4"
                >
            </de.hdodenhof.circleimageview.CircleImageView>

            <RelativeLayout
                android:layout_width="382dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageButton
                    android:id="@+id/cat_profile1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="15dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/c1" />

                <ImageButton
                    android:id="@+id/cat_profile2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="15dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/c2" />

                <ImageButton
                    android:id="@+id/cat_profile3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="190dp"
                    android:layout_marginTop="15dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/c3" />

                <ImageButton
                    android:id="@+id/cat_profile4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="240dp"
                    android:layout_marginTop="15dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/c4" />

                <ImageButton
                    android:id="@+id/dog_profile1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="60dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/d1" />

                <ImageButton
                    android:id="@+id/dog_profile2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="60dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/d2" />

                <ImageButton
                    android:id="@+id/dog_profile3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="190dp"
                    android:layout_marginTop="60dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/d3" />

                <ImageButton
                    android:id="@+id/dog_profile4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="240dp"
                    android:layout_marginTop="60dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/d4" />


            </RelativeLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edit_profile_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:hint="Name*"
                    android:textColor="#000000"
                    android:inputType="textPersonName|textCapSentences"
                    android:textSize="22dp">

                </EditText>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edit_profile_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:hint="Email ID*"
                    android:textColor="#737373"
                    android:textSize="22dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:inputType="none">

                </EditText>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edit_profile_No"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:hint="Mobile Number"
                    android:textColor="#000000"
                    android:textSize="22dp"
                    android:inputType="number">

                </EditText>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/edit_profile_btnapply"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:background="@drawable/button_rounded"
                android:text="Apply"
                android:textColor="#ffff"
                android:textSize="22sp">

            </Button>

            <Button
                android:id="@+id/edit_profile_btndelete"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/button_rounded"
                android:backgroundTint="#DA2D2D"
                android:text="Delete Profile"
                android:textColor="#ffff"
                android:textSize="22sp">

            </Button>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
