<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".Foster_reg">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout

        android:id="@+id/foster_profile_swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp"
            >
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/doggo1"
                android:scaleType="fitCenter"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="Name:"
                android:textColor="#000000"
                android:textSize="22dp"
                android:id="@+id/edit_profile_name"
                >
            </EditText>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Email ID:"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:textSize="22dp"
                android:id="@+id/edit_profile_email"
                >
            </EditText>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Mobile Number:"
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"
                    android:textSize="22dp"
                    android:id="@+id/edit_profile_No"
                    >
                </EditText>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/edit_profile_btnapply"
                android:layout_width="250dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@drawable/button_rounded"
                android:text="Apply"
                android:textSize="22sp"
                android:textColor="#ffff"
                >
            </Button>

            <Button
                android:id="@+id/btndelete_profile"
                android:layout_width="250dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/button_rounded"
                android:backgroundTint="#DA2D2D"
                android:text="Delete Profile"
                android:textSize="22sp"
                android:textColor="#ffff"
                >
            </Button>

        </LinearLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>