<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cards">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_margin="8dp"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:descendantFocusability="blocksDescendants"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            >

            <!--<ImageView
                android:id="@+id/image"
                android:src="@drawable/dog"
                android:layout_width="match_parent"
                android:scaleType="fitCenter"
                android:layout_height="200dp"
                android:background="#effifb"/>-->

            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#FBFBFB"
                app:iss_auto_cycle="false"
                app:iss_corner_radius="5"
                app:iss_delay="10"
                app:iss_period="1000"



                />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:text="Brown and white Indie Puppy"
                android:textColor="#262626"
                android:textSize="16sp"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/ageIcon"
                android:layout_width="14dp"
                android:layout_height="17dp"
                android:layout_below="@+id/image"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="47dp"
                android:src="@drawable/age" />

            <TextView
                android:id="@+id/ageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image"
                android:layout_marginLeft="47dp"
                android:layout_marginTop="51dp"
                android:text="3 months"
                android:textSize="15sp"
                />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/gender2"
                android:id="@+id/genderIcon"
                android:layout_below="@+id/image"
                android:layout_marginTop="47dp"
                android:layout_marginLeft="137dp"
                />

            <TextView
                android:id="@+id/genderText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image"
                android:layout_marginLeft="163dp"
                android:layout_marginTop="51dp"
                android:text="male"
                android:textSize="15sp"
                />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/location"
                android:id="@+id/locationIcon"
                android:layout_below="@+id/image"
                android:layout_marginTop="47dp"
                android:layout_marginLeft="237dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image"
                android:layout_marginLeft="264dp"
                android:layout_marginTop="51dp"
                android:text="Kothrud, Pune"
                android:textSize="15sp"
                android:id="@+id/locationText"/>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>