    <SeekBar
        android:id="@+id/seekBar3"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="80dp"
        android:layout_gravity="center_horizontal"
        android:max="5"
        android:progress="0"
        android:layout_below="@+id/filter_age_text"
        />

        <TextView
            android:id="@+id/seekBar_text0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seekBar3"
            android:text="None"
            android:layout_marginTop="100dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:textSize="13sp">

        </TextView>

        <TextView
            android:id="@+id/seekBar_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seekBar3"
            android:text="1 month"
            android:layout_marginTop="100dp"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:textSize="13sp">

        </TextView>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:id="@+id/seekBar_text2"
        android:text="3 months"
        android:textSize="13sp"
        android:layout_toRightOf="@+id/seekBar_text1"
        android:layout_marginStart="110dp"
        android:layout_marginLeft="110dp"
        >

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBar3"
        android:layout_marginTop="100dp"
        android:id="@+id/seekBar_text3"
        android:text="6 months"
        android:textSize="13sp"
        android:layout_toRightOf="@+id/seekBar_text2"
        android:layout_marginStart="178dp"
        android:layout_marginLeft="178dp"
        >

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBar3"
        android:id="@+id/seekBar_text4"
        android:layout_marginTop="100dp"
        android:text="12 months"
        android:textSize="13sp"
        android:layout_toRightOf="@+id/seekBar_text3"
        android:layout_marginStart="245dp"
        android:layout_marginLeft="245dp"
        >

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBar3"
        android:id="@+id/seekBar_text5"
        android:text="Older"
        android:textSize="13sp"
        android:layout_toRightOf="@+id/seekBar_text4"
        android:layout_marginTop="100dp"
        android:layout_marginStart="320dp"
        android:layout_marginLeft="320dp"

        >
    </TextView>

    </androidx.cardview.widget.CardView>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/filter_card3"
        android:layout_centerHorizontal="true"
        android:text="Apply"
        android:textColor="#ffff"
        android:textSize="20sp"
        android:background="@drawable/button_rounded"
        android:id="@+id/filter_apply_button"
        android:layout_marginTop="70dp"
        />



</RelativeLayout>